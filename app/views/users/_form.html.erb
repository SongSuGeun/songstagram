<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class ='newusertable'>
<%= form_with(model: @user, local: true) do |f| %>  
  <table class ='imageadd'>
    <tr>
        <% if @user.image != nil %>
        <tr>
          <td colspan='2'><%= image_tag (@user.image.url) %></td>
        </tr>
        <tr>
          <td><%= f.label :image %></td>
          <td><%= f.file_field :image %></td>
        </tr>
        <% else %>
          <td><%= f.label :image %></td>
          <td><%= f.file_field :image %></td>
          <td><%= f.hidden_field :image %></td>
        <% end %>
    </tr>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <% if @user.email != nil %>
        <td><%= f.email_field :email, :readonly => true ,value: @user.email %>IDは変更ｘ</td>
      <% else %>
        <td><%= f.email_field :email %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :password %></td>
      <% if @user.password != nil %>
        <td><%= f.hidden_field :password, value: @user.password %></td>
      <% else %>
        <td><%= f.password_field :password %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation , value: @user.password %></td>
    </tr>
    <tr>
      <td colspan ='2'><%= f.submit "Create my account" %></td>
    </tr>
  </table>
<% end %>
</div>